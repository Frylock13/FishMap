<%= content_for :seo_title, 'Войти' %>

<h2>Войти</h2>

<div class="col-md-4">
  <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.password_field :password, label: 'Пароль', autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me, label: 'Запомнить меня' %>
    </div>
  <% end -%>

  <div class="actions">
      <%= f.submit "Войти" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

