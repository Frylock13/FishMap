<%= content_for :seo_title, 'Регистрация' %>

<div class='col-md-4'>
  <h2>Регистрация</h2>

  <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, required: true %>
    </div>

    <div class="field">
      <%= f.text_field :name, label: 'Имя', required: true %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, label: 'Пароль', autocomplete: "off", required: true %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, label: 'Подтверждение пароля', autocomplete: "off", required: true %>
    </div>

    <div class="actions">
      <%= f.submit "Регистрация" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>