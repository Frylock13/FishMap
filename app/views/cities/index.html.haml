.regions
  %h1 Нас. пункты

  .row
    .col-md-2
      .list
        - @cities.each do |city|
          .region
            = link_to city.name, country_region_city_path(country_id: params[:country_id], region_id: params[:region_id], id: city.id)

    .col-md-10
      %div{:style => "width: 100%;"}
        #map{:style => "width: 100%; height: 800px;"}

:javascript
  var myLatLng = {lat: parseFloat("#{@coordinates.latitude}"), lng: parseFloat("#{@coordinates.longitude}")};
  console.log(myLatLng)

  var map = new google.maps.Map(document.getElementById('map'), {
    zoom: 9,
    center: myLatLng
  });

  var marker = new google.maps.Marker({
    position: myLatLng,
    map: map,
    title: 'Hello World!'
  });